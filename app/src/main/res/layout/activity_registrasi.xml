<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ijomudabackgroud"
    tools:context=".logindanregis.Registrasi">

    <ImageView
        android:src="@drawable/headerloginregis"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <ImageView
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bahanbackgroudbawah"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>


    <ScrollView
        android:scrollbarThumbVertical="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/efekbayangregislogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:boxCornerRadiusTopStart="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emaillogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:fontFamily="casual"
                android:drawablePadding="12dp"
                android:hint="Email"
                android:importantForAutofill="no"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:boxCornerRadiusTopStart="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/namapenggunalogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_account_box_24"
                android:fontFamily="casual"
                android:drawablePadding="12dp"
                android:hint="Nama Pengguna"
                android:importantForAutofill="no"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusTopStart="24dp"
            app:hintEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:fontFamily="casual"
                android:drawablePadding="12dp"
                android:hint="Password"
                android:importantForAutofill="no"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

       <LinearLayout
           android:paddingRight="10dp"
           android:paddingLeft="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnlogin"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:paddingTop="16dp"
               android:layout_marginBottom="10dp"
               android:paddingBottom="16dp"
               android:text="Masuk"
               android:backgroundTint="@color/ijomudabackgroud"
               android:textColor="#ffffff"
               app:cornerRadius="24dp"/>
       </LinearLayout>
       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>